{% for page in collections.pages %}
    {% if page.data.page.filePathStem == prev %}
        {% assign prev = page %}
    {% endif %}
    {% if page.data.page.filePathStem == next %}
        {% assign next = page %}
    {% endif %}
{% endfor %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="darkreader-lock" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Violette â€¢ {{ title }}</title>
    <link rel="shortcut icon" href="/assets/images/pecklo.webp" type="image/x-icon" />

    <link rel="stylesheet" href="/assets/css/main.min.css">
    <script type="module" src="/assets/js/main.js" defer></script>
</head>
<body>
    {% include "nav.liquid" %}
    <main class="transition-main">
        <h1>{{ title }}</h1>

        {% comment %} {% if prev %}
            <a href="{{ prev.data.page.filePathStem }}"><button class="prevlink">{{ prev.data.title }}</button></a>
        {% endif %}

        {% if next %}
            <a href="{{ next.data.page.filePathStem }}"><button class="nextlink">{{ next.data.title }}</button></a>
        {% endif %} {% endcomment %}

        {{ content }}

        {% if prev %}
            <a href="{{ prev.data.page.filePathStem }}"><button class="prevlink">{{ prev.data.title }}</button></a>
        {% endif %}

        {% if next %}
            <a href="{{ next.data.page.filePathStem }}"><button class="nextlink">{{ next.data.title }}</button></a>
        {% endif %}
    </main>
</body>
</html>
